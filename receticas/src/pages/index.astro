---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Recipe Website">
	<main>
		<h1>Welcome to Our Recipe Website</h1>
		<p>Discover delicious recipes and share your own culinary creations!</p>
		<div class="cta-buttons">
			<a href="/recipes" class="cta-button">View Recipes</a>
			<a href="/submit" class="cta-button">Submit a Recipe</a>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: #333;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.cta-buttons {
		display: flex;
		justify-content: center;
		gap: 1rem;
		margin-top: 2rem;
	}
	.cta-button {
		background-color: #333;
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 4px;
		text-decoration: none;
		font-weight: bold;
		transition: background-color 0.3s ease;
	}
	.cta-button:hover {
		background-color: #555;
	}
</style>