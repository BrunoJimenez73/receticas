---
import Layout from '../layouts/Layout.astro';
import SubmitForm from '../components/SubmitForm';
---

<Layout title="Submit Recipe">
  <main>
    <h1>Submit a Recipe</h1>
    <SubmitForm client:load />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: #333;
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>