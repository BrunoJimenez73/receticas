generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Receta {
  id       String   @id @default(cuid())
  titulo    String?
  descripcion    String?
  autor     String?
  tiempoPrep   Int?
  dificultad  String 
  categoria  String
  ingredientes  String
  preparacion  String
  fechaCreacion DateTime @default(now())
  fechaModificacion DateTime @updatedAt
}